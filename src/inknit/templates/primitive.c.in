#ifdef __INTELLISENSE__
#include "base.h.in"
#else
#include "base.h"
#endif

void inknit_clear(struct inknit_image *image, inknit_color_t color) {
	INKNIT_ASSUME_IMAGE(image);
	INKNIT_ASSUME_COLOR(color);

#ifdef INKNIT_USE_MEMORY_H
	const inknit_color_t pattern = _inknit_fill_byte_with_color(color);
	const uint32_t       bytes   = (uint32_t)image->stride * image->height;
	memset(image->data, (int)pattern, (size_t)bytes);
#else
	const inknit_color_t pattern = _inknit_fill_word_with_color(color);
	const uint32_t       words   = ((uint32_t)image->stride * image->height) >> 2;
	uint32_t            *data    = (uint32_t *)image->data;
	for (uint32_t i = 0; i < words; ++i) {
		data[i] = pattern;
	}
#endif
}
