#ifdef __INTELLISENSE__
#include "../base.h.in"
#include "../shared/helpers.h"
#else
#include "../base.h"
#include "shared/helpers.h"
#endif

void _inknit_fill_rect_with_clip32(
	uint32_t *INKNIT_RESTRICT                 data,
	uint32_t                                  stride,
	int32_t                                   x1,
	int32_t                                   y1,
	int32_t                                   x2,
	int32_t                                   y2,
	inknit_color_t                            color,
	const struct inknit_rect *INKNIT_RESTRICT clip_rect
) {
	INKNIT_ASSUME_COORD_X_RANGE(x1, x2);
	INKNIT_ASSUME_COORD_Y_RANGE(y1, y2);
	INKNIT_ASSUME_COLOR(color);
	INKNIT_ASSUME_CLIP_RECT(clip_rect);

	if (!clip_range_y_exclusive(&y1, &y2, clip_rect)) {
		return;
	}
	if (!clip_range_x_exclusive(&x1, &x2, clip_rect)) {
		return;
	}

	// Eliminate the case where x1 > x2 or y1 > y2 due to clipping
	if (INKNIT_UNLIKELY(x1 > x2 || y1 > y2)) {
		return;
	}

	// Vertical line
	if (INKNIT_UNLIKELY(x1 == x2)) {
		if (clip_rect->left <= x1 && x1 < clip_rect->right) {
			_inknit_draw_vline32(data, stride, (uint32_t)x1, (uint32_t)y1, (uint32_t)y2, color);
		}
	}

	// Normal filled rect
	else {
		for (uint32_t t = (uint32_t)y1; t <= (uint32_t)y2; ++t) {
			_inknit_draw_hline32(data, stride, (uint32_t)x1, (uint32_t)x2, t, color);
		}
	}
}

void inknit_fill_rect(
	struct inknit_image *image,
	int32_t              x,
	int32_t              y,
	int32_t              width,
	int32_t              height,
	inknit_color_t       color
) {
	INKNIT_ASSUME_IMAGE(image);
	INKNIT_ASSUME_COORD_X(x);
	INKNIT_ASSUME_COORD_Y(y);
	INKNIT_ASSUME_SIZE(width, height);
	INKNIT_ASSUME_COLOR(color);

	uint32_t *INKNIT_RESTRICT const data   = (uint32_t *)image->data;
	const uint32_t                  stride = image->stride;

	struct inknit_rect clip_rect = {
		0,
		0,
		image->width,
		(int16_t)image->height,
	};

	const int32_t right  = x + width - 1;
	const int32_t bottom = y + height - 1;
	_inknit_fill_rect_with_clip32(data, stride, x, y, right, bottom, color, &clip_rect);
}

void inknit_fill_rect_coord(
	struct inknit_image *image, int32_t x1, int32_t y1, int32_t x2, int32_t y2, inknit_color_t color
) {
	INKNIT_ASSUME_IMAGE(image);
	INKNIT_ASSUME_COORD_X_RANGE(x1, x2);
	INKNIT_ASSUME_COORD_Y_RANGE(y1, y2);
	INKNIT_ASSUME_COLOR(color);

	uint32_t *INKNIT_RESTRICT const data   = (uint32_t *)image->data;
	const uint32_t                  stride = image->stride;

	struct inknit_rect clip_rect = {
		0,
		0,
		image->width,
		(int16_t)image->height,
	};

	_inknit_fill_rect_with_clip32(data, stride, x1, y1, x2, y2, color, &clip_rect);
}
